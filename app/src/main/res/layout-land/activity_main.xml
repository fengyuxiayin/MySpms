<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lzc.myspms.activitys.MainActivity">

    <RelativeLayout
        android:id="@+id/main_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/homepage_radiogroup_bg_black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main_img_personal"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@mipmap/person" />

        <TextView
            android:id="@+id/main_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/homepage_text_press"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/main_iv_send_message"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@mipmap/send_message" />

        <ImageView
            android:id="@+id/main_iv_message"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@id/main_iv_send_message"
            android:src="@mipmap/message" />

        <ImageView
            android:id="@+id/main_img_videocall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@id/main_iv_message"
            android:src="@mipmap/videocall" />

        <ImageView
            android:id="@+id/main_img_call"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@id/main_img_videocall"
            android:src="@mipmap/call_normal" />

        <ImageView
            android:id="@+id/main_img_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@id/main_img_call"
            android:src="@mipmap/add_enterprise" />
        <ImageView
            android:id="@+id/main_img_add_place"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@id/main_img_add"
            android:src="@mipmap/add_place" />
        <ImageView
            android:id="@+id/main_img_scan"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@id/main_img_add_place"
            android:src="@mipmap/qrcode" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="40dp"
        android:background="@mipmap/homepage_bg" />

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/homepage_radiogroup_bg_black"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_main_homepage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/homepage_radiogroup_bg_black"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="主页"
            android:textColor="@drawable/selector_homepage_text_color"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_main_check"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/homepage_radiogroup_bg_black"
            android:button="@null"
            android:gravity="center"
            android:text="查询"
            android:textColor="@drawable/selector_homepage_text_color"
            android:textSize="12sp" />
        <RadioButton
            android:id="@+id/rb_main_publish_task"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/homepage_radiogroup_bg_black"
            android:button="@null"
            android:gravity="center"
            android:text="发布任务"
            android:textColor="@drawable/selector_homepage_text_color"
            android:textSize="12sp" />
        <RadioButton
            android:id="@+id/rb_main_new_check"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/homepage_radiogroup_bg_black"
            android:button="@null"
            android:gravity="center"
            android:text="新的检查"
            android:textColor="@drawable/selector_homepage_text_color"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_main_check_progress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/homepage_radiogroup_bg_black"
            android:button="@null"
            android:gravity="center"
            android:text="检查进度"
            android:textColor="@drawable/selector_homepage_text_color"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_main_recheck"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/homepage_radiogroup_bg_black"
            android:button="@null"
            android:gravity="center"
            android:text="复查流程"
            android:textColor="@drawable/selector_homepage_text_color"
            android:textSize="12sp" />
    </RadioGroup>

</RelativeLayout>
